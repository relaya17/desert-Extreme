---
import MainLayout from '../layouts/MainLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import SafetyTable from '../components/SafetyTable.astro';
import CallButton from '../components/CallButton.astro';
import Testimonials from '../components/Testimonials.astro';
import VideoSection from '../components/VideoSection.astro';
import ContactForm from '../components/ContactForm.astro';
import en from '../i18n/en.json';

const t = en;
---

<MainLayout lang="en" title={t.title}>
    <Header t={t} lang="en" />
    
    <SafetyTable t={t} />
    
    <main>
        <div class="container-fluid header-info text-center py-5">
            <h1 class="mb-4">{t.hero.who_we_are}</h1>
            <div class="row justify-content-center">
                <div class="col-md-12 mb-4">
                    <div class="card p-4 h-100 shadow">
                        <h4>{t.hero.description}</h4>
                    </div>
                </div>
            </div>
            <div class="row row-cols-1 row-cols-md-3 g-3">
                {t.hero.features.map((feature) => (
                    <div class="col">
                        <div class="card p-3 h-100 shadow">
                            <h4>{feature}</h4>
                        </div>
                    </div>
                ))}
            </div>
            <div class="row mt-4">
                <div class="col-md-12">
                    <div class="card p-4 h-100 shadow">
                        <h4>{t.hero.ready}</h4>
                    </div>
                </div>
            </div>
        </div>

        <CallButton t={t} />

        <div class="container-fluid mt-5" id="activities">
            <div class="row row-cols-1 row-cols-md-3 g-4">
                <div class="col">
                    <div class="card h-100 p-3">
                        <img src="/images/geep.png" class="card-img-top" alt="Desert Jeeps" />
                        <div class="card-body text-center">
                            <h3 class="card-title">{t.activities.jeeps_title}</h3>
                            <p class="card-text">{t.activities.jeeps_desc}</p>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card h-100 p-3">
                        <img src="/images/sky.png" class="card-img-top" alt="Jeep Tours" />
                        <div class="card-body text-center">
                            <h3 class="card-title">{t.activities.tours_title}</h3>
                            <p class="card-text">{t.activities.tours_desc}</p>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card h-100 p-3">
                        <img src="/images/haruds.png" class="card-img-top" alt="Adventure Ready" />
                        <div class="card-body text-center">
                            <h3 class="card-title">{t.activities.ready_title}</h3>
                            <p class="card-text">{t.activities.ready_desc}</p>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card h-100 p-3">
                        <img src="/images/pic.png" class="card-img-top" alt="Real Action" />
                        <div class="card-body text-center">
                            <h3 class="card-title">{t.activities.action_title}</h3>
                            <p class="card-text">{t.activities.action_desc}</p>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card h-100 p-3">
                        <img src="/images/bbb.png" class="card-img-top" alt="Professional Guides" />
                        <div class="card-body text-center">
                            <h3 class="card-title">{t.activities.team_title}</h3>
                            <p class="card-text">{t.activities.team_desc}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <Testimonials t={t} />

        <VideoSection t={t} />

        <section class="payment-section container text-center mt-5" id="payment">
            <h2>{t.packages.title}</h2>
            <div class="row mt-4">
                <div class="col-md-6 mx-auto">
                    <div class="card payment-card p-4">
                        <h3 class="mb-4">{t.packages.select}</h3>
                        <div id="package-buttons" class="d-flex flex-column gap-3 mb-4">
                            <button type="button" class="btn btn-outline-light package-button" data-package="basic" data-price="350">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span>{t.packages.basic}</span>
                                    <span class="price">₪350</span>
                                </div>
                            </button>
                            <button type="button" class="btn btn-outline-light package-button" data-package="premium" data-price="650">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span>{t.packages.premium}</span>
                                    <span class="price">₪650</span>
                                </div>
                            </button>
                            <button type="button" class="btn btn-outline-light package-button" data-package="extreme" data-price="850">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span>{t.packages.extreme}</span>
                                    <span class="price">₪850</span>
                                </div>
                            </button>
                        </div>
                        <button id="checkout-button" class="btn btn-success btn-lg w-100 mb-3" disabled>
                            <i class="fas fa-lock me-2"></i> Continue to Secure Payment
                        </button>
                        <p class="text-center security-note">
                            <i class="fas fa-shield-alt"></i> All transactions are secured with SSL standard via Stripe
                        </p>
                    </div>
                </div>
            </div>
        </section>

        <ContactForm t={t} />
    </main>

    <Footer t={t} />
</MainLayout>
