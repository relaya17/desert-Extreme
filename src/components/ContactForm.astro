---
const { t } = Astro.props;
---
<section id="contact-form" class="contact-form container text-center mt-5">
    <h2>{t.contact.title}</h2>
    <form action="/api/contact" method="POST">
        <div class="mb-3">
            <input type="text" name="name" class="form-control" placeholder={t.contact.name} required />
        </div>
        <div class="mb-3">
            <input type="tel" name="phone" class="form-control" placeholder={t.contact.phone} required />
        </div>
        <button type="submit" class="btn btn-primary btn-lg">
            {t.contact.submit}
        </button>
    </form>
</section>
