---
const { t } = Astro.props;

const galleryItems = [
  { img: '/images/geep.png', title: t.gallery.jeep, color: 'primary' },
  { img: '/images/sky.png', title: t.gallery.sky, color: 'info' },
  { img: '/images/haruds.png', title: t.gallery.haruds, color: 'warning' },
  { img: '/images/pic.png', title: t.gallery.action, color: 'danger' },
  { img: '/images/bbb.png', title: t.gallery.guides, color: 'success' },
  { img: '/images/blou.png', title: t.gallery.adventure, color: 'secondary' },
  { img: '/images/nnn.png', title: t.gallery.landscape, color: 'dark' },
  { img: '/images/vvv.png', title: t.gallery.nature, color: 'primary' },
  { img: '/images/kobiImage.png', title: t.gallery.experience1, color: 'info' },
  { img: '/images/kobiImage2.png', title: t.gallery.experience2, color: 'warning' },
  { img: '/images/kobiImage3.png', title: t.gallery.experience3, color: 'danger' },
];
---

<section class="gallery-section container-fluid mt-5" id="gallery">
    <h2 class="text-center mb-4">{t.gallery.title}</h2>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
        {galleryItems.map((item) => (
            <div class="col">
                <div class={`card gallery-card h-100 border-${item.color} shadow-sm`}>
                    <div class="card-img-wrapper">
                        <img src={item.img} class="card-img-top" alt={item.title} loading="lazy" />
                        <div class={`card-img-overlay-gradient bg-gradient-${item.color}`}></div>
                    </div>
                    <div class={`card-body text-center bg-${item.color} bg-opacity-10`}>
                        <h5 class={`card-title text-${item.color}`}>{item.title}</h5>
                    </div>
                </div>
            </div>
        ))}
    </div>
</section>

<style>
.gallery-card {
    transition: all 0.3s ease;
    overflow: hidden;
    border-width: 3px;
}

.gallery-card:hover {
    transform: translateY(-10px) scale(1.02);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.3) !important;
}

.card-img-wrapper {
    position: relative;
    overflow: hidden;
    height: 250px;
}

.card-img-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
}

.gallery-card:hover .card-img-wrapper img {
    transform: scale(1.1);
}

.card-img-overlay-gradient {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 50%;
    opacity: 0;
    transition: opacity 0.3s ease;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.7), transparent);
}

.gallery-card:hover .card-img-overlay-gradient {
    opacity: 1;
}

.card-body {
    padding: 1.5rem;
    border-top: none;
}

.card-title {
    font-weight: bold;
    font-size: 1.1rem;
    margin: 0;
}

@media (max-width: 768px) {
    .card-img-wrapper {
        height: 200px;
    }
}

@media (max-width: 576px) {
    .card-img-wrapper {
        height: 180px;
    }
    
    .card-title {
        font-size: 1rem;
    }
}
</style>
