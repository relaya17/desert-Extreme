---
const { t, lang } = Astro.props;
---
<div class="language-selector text-center py-2 bg-dark">
    <a href="/he" class={`btn btn-sm ${lang === 'he' ? 'btn-primary' : 'btn-outline-light'} mx-1`}>עברית</a>
    <a href="/en" class={`btn btn-sm ${lang === 'en' ? 'btn-primary' : 'btn-outline-light'} mx-1`}>English</a>
    <a href="/ru" class="btn btn-sm btn-outline-light mx-1">Русский</a>
    <a href="/fr" class="btn btn-sm btn-outline-light mx-1">Français</a>
    <a href="/ar" class="btn btn-sm btn-outline-light mx-1">العربية</a>
</div>

<div class="header header-container position-relative text-center text-white">
    <video autoplay loop muted playsinline class="header-video">
        <source src="/images/hhh.mp4" type="video/mp4" />
    </video>
    <div class="overlay">
        <h1>{t.title}</h1>
        <h2>{t.subtitle}</h2>
    </div>
</div>

<div class="special-offer">
    <h3>{t.special_offer}</h3>
</div>

<div class="main-nav container-fluid text-center mt-3">
    <a href="#activities" class="btn btn-outline-light mx-2">{t.nav.activities}</a>
    <a href="/blog" class="btn btn-info mx-2">{t.nav.blog}</a>
    <a href="#payment" class="btn btn-warning mx-2">{t.nav.booking}</a>
    <a href="tel:0533919193" class="btn btn-outline-light mx-2">{t.nav.contact}</a>
</div>
